{
  "extends": [
    "exchange-solutions/base"
  ],
  "env": {
    "mocha": "mocha",
    "node": true
  },
  "globals": {
    "assert": true,
    "expect": true
  },
  "parser": "babel-eslint",
  "rules": {
    "constructor-super": 2,
    "comma-spacing": 2,
    "comma-style": [2, "last"],
    "one-var": [2, { "initialized": "never" }],
    "key-spacing": 0,
    "no-this-before-super": 2,
    "no-underscore-dangle": 0,
    "no-unused-vars": [2, { "vars": "all", "args": "none" }],
    "no-var": 2,
    "quotes": [2, "single", "avoid-escape"],
    "strict": [2, "never"]
  }
}
